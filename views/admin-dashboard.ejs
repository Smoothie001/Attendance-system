<%- include("includes/head.ejs") %>
<link rel="stylesheet" href="/css/style.css">
</head>
<body>
<div class="dashboard-container">
    <h2>Admin Dashboard</h2>
    <button id="logout-btn" ONCLICK="location.href = '/login'">Logout</button>
    <h3>Manage Courses</h3>
    <form id="add-course-form" action="/api/admin/add-course" method="POST">
        <input type="text" id="course-name" name="courseName" placeholder="Course Name" required>
        <button type="submit">Add Course</button>
    </form>
    <br>
    <br>
    <br>
    <h3>Student Attendance</h3>
    <table id="attendance-table">
        <thead>
        <tr>
            <th>Course</th>
            <th>Student</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        <% if (attendanceRecords && attendanceRecords.length > 0) { %>
            <% attendanceRecords.forEach(function(record) { %>
                <tr>
                    <td><%= record.course %></td>
                    <td><%= record.student %></td>
                    <td><%= record.status %></td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="3">No attendance records available.</td>
            </tr>
        <% } %>
        </tbody>
    </table>

    <h3>Courses</h3>
    <table id="attendance-table">
        <thead>
        <tr>
            <th>Course Title</th>
        </tr>
        </thead>
        <tbody>
        <% if (!!courses && courses?.length > 0) { %>
            <% courses.forEach(function(record) { %>
                <tr>
                    <td><%= record.name %></td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="3">No attendance records available.</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
